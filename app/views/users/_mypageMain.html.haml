.mypageMainContainer
  .mypageMainContainer__leftContnet
  .mypageMainContainer__rightContnet
    .mypageMainContainer__rightContnet__profile
    #five-lists
      %ul.two-tabs.mypageMainContainer__rightContnet__five-tabs
        %li.tab.mypageMainContainer__rightContnet__five-tabs__five-tab.activeTab
          .tabMessage
            おしらせ
        %li.tab.mypageMainContainer__rightContnet__five-tabs__five-tab
          .tabMessage
            やることリスト
      %ul.lists.mypageMainContainer__rightContnet__lists.non-active.active
        -# = render partial: "mypageNoticeForm", locals: { notice: @notices }
        - @notices.last(5).each do |notice|
          %li
            .list.mypageMainContainer__rightContnet__lists__list
              = link_to "","#" ,class: "tabLink"
              .icon.mypageMainContainer__rightContnet__lists__list__icon
                = image_tag(src= "cat.png",size: "50x50",class: "cat")
              ..mypageMainContainer__rightContnet__lists__list__messageBox
                .mypageMainContainer__rightContnet__lists__list__messageBox__message
                  = "#{notice[:text]}"
                .mypageMainContainer__rightContnet__lists__list__messageBox__watches
                  .mypageMainContainer__rightContnet__lists__list__messageBox__watches__watchIcon
                    = icon('fab', 'clock')
                  .mypageMainContainer__rightContnet__lists__list__messageBox__watches__time
                    = "#{notice[:time]}"
              .mypageMainContainer__rightContnet__lists__list__arrow
                = icon('fab','chevron-right')
        .mypageMainContainer__rightContnet__lists__list__allShow.n-allshow
          .mypageMainContainer__rightContnet__lists__list__allShow__btn.n-btn
            %p
              一覧を見る

      %ul.lists.mypageMainContainer__rightContnet__lists.non-active
        = render partial: "mypageTodoForm", locals: { todo: @todos }
      .mypageMainContainer__rightContnet__myItems  
        %p
          購入した商品
      %ul.mypageMainContainer__rightContnet__myItems__tabs.tabs
        %li.itemTab.tab.activeTab
          .tabMessage
            取引中
        %li.itemTab.tab
          .tabMessage
            過去の取引
      .itemBox.non-active.active
        取引中の商品
      .itemBox.non-active
        取引終了の商品