= render "items/header"
= form_for @user, url: address_create_user_path(1) ,method: :post do |f|
  %input.input-default{name: "family_name", placeholder: "例) 前原", type: "text", value: ""}
  %input.input-default{name: "first_name", placeholder: "例) 正邦", type: "text", value: ""}
  %input.input-default{name: "family_name_reading", placeholder: "例) マエハラ", type: "text", value: ""}
  %input.input-default{name: "first_name_reading", placeholder: "例) マサクニ", type: "text", value: ""}
  %input.input-default{name: "phone_number", placeholder: "例) 09012345678", type: "number", value: ""}
  = f.fields_for :address do |i|
    .form-group
      = i.label :postal_code, "郵便番号"
      = i.text_field :postal_code
  %button.btn-default.btn-red{type: "submit"} 変更する
